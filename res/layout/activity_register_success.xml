<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff"
    >
    <LinearLayout 
        android:id="@+id/register_success__ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
	    <ImageView 
		    android:id="@+id/registers_success_head_picture"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginLeft="10dp"   
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/jiujiuli"
		        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textSize="30sp" 
            android:layout_weight="1"
            />
        <ImageView 
		    android:id="@+id/register_success_rightnull"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp"   
		    android:layout_gravity="center_vertical"
		    
		        />
    </LinearLayout>
    <!-- 隔断线 -->
    <ImageView 
        android:id="@+id/register_success_iv_will"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@id/register_success__ll_top"
        />
    <!-- ................................................................................................................. -->
    <LinearLayout 
        android:id="@+id/register_success__ll_centent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
	    <TextView
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center"
	            android:layout_centerInParent="true"
	            android:text="注册成功！"
	            android:textSize="15dp" 
	            
	            />
	    <TextView
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center"
	            android:layout_centerInParent="true"
	            android:text="这是您的uu账号："
	            android:textSize="15dp" 
	            
	            />
	     <TextView
	         	android:id="@+id/register_success_tv_uunumber"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center"
	            android:layout_centerInParent="true"
	            android:text=""
	            android:textSize="25dp" 
	            
	            />
	    <TextView
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center"
	            android:layout_centerInParent="true"
	            android:text="请牢记您的账号和密码"
	            android:textSize="15dp" 
	            
	            />
	</LinearLayout>
    <!-- 截图保存按钮 -->
    <Button
        android:id="@+id/register_success_btn_creenshot"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#6f9ecc"
        android:text="截图保存"
        android:textColor="#fff"
        android:textSize="24sp"
        android:onClick="ScreenshotOnclick" />
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="50dp"      
        />
    <!-- 直接登陆按钮 -->
    <Button
        android:id="@+id/register_success_btn_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#6f9ecc"
        android:text="直接登陆"
        android:textColor="#fff"
        android:textSize="24sp"
        android:onClick="Onclick" />
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        
        />

</LinearLayout>
