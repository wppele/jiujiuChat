<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff">
    <!-- 消息页面标头 -->
    <LinearLayout 
        android:id="@+id/fm_contacts_ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
	    <ImageView 
		    android:id="@+id/fm_contacts_head_picture"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginLeft="10dp"   
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/jiujiuli"
		        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:text="联系人"
            android:textSize="30sp" 
            />
    </LinearLayout>
    <!-- 隔断线 -->
    <ImageView 
        android:id="@+id/fm_contacts_iv_will"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@id/fm_contacts_ll_top"
        />
    <!-- 好友列表显示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_below="@id/fm_contacts_iv_will"
        >
        <ListView 
            android:id="@+id/fm_contacts_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>
    </LinearLayout>
</RelativeLayout>