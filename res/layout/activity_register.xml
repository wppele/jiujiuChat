<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:layout_weight="1"
	    >
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginTop="50dp"

	        >
	        <TextView
	            android:id="@+id/register_tv_nickName" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="13dp"
		        android:text="昵称"
	       		 />
		    <EditText 
		        android:id="@+id/register_et_nickName"
		        android:layout_width="200dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="77dp"
		        android:layout_toRightOf="@id/register_tv_nickName"
		        android:maxLength="20" 
		        />
	    
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"

	        >
		    <TextView 
		        android:id="@+id/register_tv_password"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginTop="13dp"
		        android:text="密码"
		        />
		    
		    <EditText 
		        android:id="@+id/register_et_password"
		        android:layout_width="200dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
			    android:layout_marginLeft="77dp"
			    android:layout_toRightOf="@id/register_tv_password"
		        android:maxLength="20" 
		        />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        >
		    <TextView 
		        android:id="@+id/register_tv_password2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginTop="13dp"
		        android:text="确认密码"
		        />
		    <EditText 
		        android:id="@+id/register_et_password2"
		        android:layout_width="200dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
			    android:layout_marginLeft="50dp"
			    android:layout_toRightOf="@id/register_tv_password2"
		        android:maxLength="20" 
		        />
	    </RelativeLayout>
	   
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        >
		    <TextView 
		        android:id="@+id/register_tv_realName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginTop="13dp"
		        android:text="真实姓名"
		        />
		    <EditText 
		        android:id="@+id/register_et_realName"
		        android:layout_width="200dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
			    android:layout_marginLeft="50dp"
			    android:layout_toRightOf="@id/register_tv_realName"
		        android:maxLength="20" 
		        />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        >
		    <TextView 
		        android:id="@+id/register_tv_idCard"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginTop="13dp"
		        android:text="身份证号"
		        />
		    <EditText 
		        android:id="@+id/register_et_idCard"
		        android:layout_width="200dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
			    android:layout_marginLeft="50dp"
			    android:layout_toRightOf="@id/register_tv_idCard"
		        android:maxLength="20" 
		        />
	    </RelativeLayout>
	   
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        >
		    <TextView 
		        android:id="@+id/register_tv_phone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginTop="13dp"
		        android:text="联系方式"
		        />
		    <EditText 
		        android:id="@+id/register_et_phone"
		        android:layout_width="200dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
			    android:layout_marginLeft="50dp"
			    android:layout_toRightOf="@id/register_tv_phone"
		        android:maxLength="20" 
		        />
	    </RelativeLayout>
	</LinearLayout>
 	<!-- 注册按钮，提交注册信息 -->
    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#6f9ecc"
        android:text="立即注册"
        android:textColor="#fff"
        android:textSize="24sp"
        android:onClick="RegisterOnclick" />
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        
        />

</LinearLayout>
