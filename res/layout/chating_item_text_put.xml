<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="6dp" >

    <!-- 发送时间显示*************************************************************** -->

    <TextView
        android:id="@+id/chating_item_put_sendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_send_time_bg"
        android:padding="2dp"
        android:textColor="#ffffff"
        android:textSize="12sp" 
        android:text="2015-06-22"
        android:layout_gravity="center_horizontal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >
		<!-- 我的头像显示*********************************************************** -->
		<ImageView
            android:id="@+id/chating_item_put_userhead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher" />
        <!-- 聊天内容显示************************************************************* -->
        <TextView
            android:id="@+id/chating_item_put_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_toLeftOf="@id/chating_item_put_userhead"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chatto_bg" 
            android:minHeight="50dp"
	        android:gravity="left|center"
	        android:textColor="#000000"
	        android:textSize="15sp"
	        android:lineSpacingExtra="2dp"
	        android:clickable="true"
	        android:focusable="true"
	        android:text="我也是你爸爸"
       		/>
    </RelativeLayout>

</LinearLayout>